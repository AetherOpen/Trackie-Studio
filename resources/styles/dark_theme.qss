/* resources/styles/dark_theme.qss */
/* Folha de Estilos Completa para o Tema Escuro Profissional do TrackieStudio */

/* --- 1. ESTILOS GLOBAIS --- */
/* Define a base para todos os widgets. */
QWidget {
    background-color: #000000; /* Fundo principal: Preto */
    color: #FFFFFF;            /* Cor do texto padrão: Branco */
    font-family: "Sans-serif"; /* Fonte padrão (usará Arial, Helvetica, etc.) */
    font-size: 13px;
    border: none;              /* Remove bordas inesperadas */
}

/* --- 2. ESTRUTURA PRINCIPAL (LAYOUT) --- */
QMainWindow {
    background-color: #000000;
}

#LeftSidebar {
    background-color: #000000;
    border-right: 1px solid #FFFFFF;
}

#CentralPanel {
    /* A área central tem fundo branco, onde o painel escuro ficará contido. */
    background-color: #FFFFFF;
}

#RightSidebar {
    background-color: #000000;
    border-left: 1px solid #FFFFFF;
}

/* Painel cinza escuro dentro da área central */
#InnerPanel {
    background-color: #222222;
    border: 1px solid #FFFFFF;
    border-radius: 8px;
}

/* --- 3. BOTÕES (QPushButton) --- */
/* Estilo geral para todos os botões */
QPushButton {
    background-color: #444444;
    border-radius: 5px;
    padding: 10px;
    font-size: 14px;
    min-height: 20px;
}

QPushButton:hover {
    background-color: #555555;
}

QPushButton:pressed {
    background-color: #3a3a3a;
}

QPushButton:disabled {
    background-color: #2a2a2a;
    color: #666666;
}

/* Botões de módulo na barra esquerda */
#ModuleButton {
    font-weight: bold;
    text-align: center;
}

/* Botão de colapsar/expandir */
#CollapseButton {
    max-width: 30px;
    max-height: 30px;
    border-radius: 15px; /* Deixa o botão circular */
    font-size: 16px;
    font-weight: bold;
}

/* --- 4. SELETORES (QComboBox) --- */
QComboBox {
    background-color: #333333;
    border: 1px solid #444444;
    border-radius: 5px;
    padding: 8px 10px;
}

QComboBox:hover {
    background-color: #444444;
}

/* Estilo para a seta do dropdown */
QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 25px;
    border-left-width: 1px;
    border-left-color: #444444;
    border-left-style: solid;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}

QComboBox::down-arrow {
    /* COMENTÁRIO: Crie um ícone de seta branca (12x12) e adicione-o aos recursos */
    /* image: url(:/icons/down_arrow.svg); */
}

/* Estilo para a lista que aparece ao clicar */
QComboBox QAbstractItemView {
    background-color: #333333;
    color: #FFFFFF;
    border: 1px solid #555555;
    selection-background-color: #555555; /* Cor do item selecionado/hover */
    outline: 0px; /* Remove a borda pontilhada de foco */
}

/* --- 5. SLIDERS (QSlider) --- */
QSlider::groove:horizontal {
    background: #333333;
    height: 4px;
    border-radius: 2px;
}

QSlider::handle:horizontal {
    background: #FFFFFF;
    width: 16px;
    height: 16px;
    margin: -6px 0; /* Centraliza o manipulador na ranhura */
    border-radius: 8px; /* Deixa o manipulador circular */
}

QSlider::handle:horizontal:hover {
    background: #E0E0E0; /* Leve brilho no hover */
}

/* --- 6. TOGGLES (QCheckBox estilizado) --- */
/* Este é o estilo que transforma um checkbox padrão em um toggle moderno */
QCheckBox {
    spacing: 10px; /* Espaço entre o toggle e o texto */
}

QCheckBox::indicator {
    width: 40px;
    height: 20px;
    background-color: #333333; /* Cor do toggle desligado */
    border-radius: 10px;
}

QCheckBox::indicator:unchecked {
    /* Círculo branco à esquerda */
    image: url(:/icons/toggle_off.svg); /* Requer um SVG de um círculo branco 16x16 em um fundo 40x20 */
}

QCheckBox::indicator:checked {
    background-color: #27ae60; /* Cor verde para ligado */
    /* Círculo branco à direita */
    image: url(:/icons/toggle_on.svg); /* Requer um SVG de um círculo branco 16x16 na posição direita */
}

/* --- 7. RÓTULOS (QLabel) --- */
/* Estilo para os títulos das seções nas barras laterais */
#SidebarLabel {
    color: #CCCCCC;
    font-weight: bold;
    font-size: 11px;
    text-transform: uppercase;
    padding-top: 10px; /* Espaço acima de cada título de seção */
}

/* --- 8. BARRA DE FERRAMENTAS INFERIOR --- */
#BottomToolbar {
    background-color: #FFFFFF;
    border-radius: 5px;
}

#BottomToolbar QPushButton {
    background-color: transparent;
    color: #000000;
    border: none;
    /* Ícones devem ser pretos */
}

#BottomToolbar QPushButton:hover {
    background-color: #E0E0E0; /* Fundo cinza claro no hover */
}


/* --- 9. BARRAS DE ROLAGEM (QScrollBar) --- */
/* Para uso futuro em áreas com muito conteúdo */
QScrollBar:vertical {
    border: none;
    background: #1A1A1A;
    width: 10px;
    margin: 0px 0px 0px 0px;
}
QScrollBar::handle:vertical {
    background: #555555;
    min-height: 20px;
    border-radius: 5px;
}
QScrollBar::handle:vertical:hover {
    background: #666666;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
    background: none;
}

/* --- 10. DICAS DE FERRAMENTA (QToolTip) --- */
QToolTip {
    background-color: #222222;
    color: #FFFFFF;
    border: 1px solid #444444;
    padding: 5px;
    border-radius: 3px;
}